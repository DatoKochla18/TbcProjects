<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/callDialogFragment">

    <fragment
        android:id="@+id/callDialogFragment"
        android:name="com.example.tbcexercises.presentation.callDialogScreen.CallDialogFragment"
        android:label="fragment_call_dialog"
        tools:layout="@layout/fragment_call_dialog" />
    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.example.tbcexercises.presentation.contactListScreen.ContactListFragment"
        android:label="fragment_contact_list"
        tools:layout="@layout/fragment_contact_list" >
        <action
            android:id="@+id/action_contactListFragment_to_contactAddEditFragment"
            app:destination="@id/contactAddEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactAddEditFragment"
        android:name="com.example.tbcexercises.presentation.contactAddEditScreen.ContactAddEditFragment"
        android:label="fragment_contact_add_edit"
        tools:layout="@layout/fragment_contact_add_edit" >
        <argument
            android:name="contactId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>