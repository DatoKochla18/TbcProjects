<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/orderFragment">
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.tbcexercises.orderScreen.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order">
        <action
            android:id="@+id/action_orderFragment_to_orderReviewFragment"
            app:destination="@id/orderReviewFragment" />
    </fragment>
    <dialog
        android:id="@+id/orderReviewFragment"
        android:name="com.example.tbcexercises.orderReviewScreen.OrderReviewFragment"
        android:label="fragment_order_review"
        tools:layout="@layout/fragment_order_review">
        <argument
            android:name="order"
            app:argType="com.example.tbcexercises.model.Order" />
    </dialog>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tbcexercises.HomeScreen.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/orderListFragment"
        android:name="com.example.tbcexercises.orderListScreen.OrderListFragment"
        android:label="fragment_order_list"
        tools:layout="@layout/fragment_order_list">


    </fragment>
</navigation>