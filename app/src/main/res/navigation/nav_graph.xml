<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tbcexercises.presentation.home_screen.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_bottomSheetLocationFragment"
            app:destination="@id/bottomSheetLocationFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheetLocationFragment"
        android:name="com.example.tbcexercises.presentation.bottom_sheet_location_screen.BottomSheetLocationFragment"
        android:label="fragment_bottom_sheet_location"
        tools:layout="@layout/fragment_bottom_sheet_location">
        <argument
            android:name="lat"
            app:argType="float" />
        <argument
            android:name="lan"
            app:argType="float" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="adress"
            app:argType="string" />
    </dialog>

</navigation>