<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="28dp"
    android:background="@drawable/item_background">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/btnSelectAddress"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="19dp"
        android:button="@drawable/checkbox_selector"
        android:theme="@style/checkBoxStyle"
        app:layout_constraintBottom_toBottomOf="@id/imLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imLocation">

    </androidx.appcompat.widget.AppCompatCheckBox>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="22dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/btnSelectAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home">

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtDetailedLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:textColor="@color/detail_location"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSelectAddress"
        app:layout_constraintTop_toBottomOf="@+id/imLocation"

        >

    </androidx.appcompat.widget.AppCompatTextView>

    <TextView
        android:id="@+id/txtSendTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:text="@string/send_to"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/imLocation"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>

    <TextView
        android:id="@+id/txtAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"

        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imLocation"
        app:layout_constraintTop_toBottomOf="@id/txtSendTo">


    </TextView>

    <TextView
        android:id="@+id/txtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="23dp"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/edit"
        android:textColor="@color/unselected_edit"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>