<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="16dp"
    android:background="@drawable/order_card_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgOrderBackground"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:background="@drawable/order_photo_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgOrder"
        android:layout_width="72dp"
        android:layout_height="92dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/imgOrderBackground"
        app:layout_constraintEnd_toEndOf="@id/imgOrderBackground"
        app:layout_constraintStart_toStartOf="@id/imgOrderBackground"
        app:layout_constraintTop_toTopOf="@id/imgOrderBackground"
        app:srcCompat="@drawable/brown_chair" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgOrderBackground"
        app:layout_constraintTop_toTopOf="@id/imgOrderBackground" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgOrderColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/imgOrderBackground"
        app:layout_constraintTop_toBottomOf="@id/txtOrderName"
        app:srcCompat="@drawable/circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtOrderColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/lightGray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgOrderColor"
        app:layout_constraintTop_toBottomOf="@id/txtOrderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="@string/colorQuantitySeparator"
        android:textColor="@color/lightGray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/txtOrderColor"
        app:layout_constraintTop_toBottomOf="@id/txtOrderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/lightGray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/txtSeparator"
        app:layout_constraintTop_toBottomOf="@id/txtOrderName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/order_status_rounded"
        android:padding="8dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/imgOrderBackground"
        app:layout_constraintTop_toBottomOf="@id/imgOrderColor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/btnOrderAction"
        app:layout_constraintEnd_toStartOf="@id/btnOrderAction"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/imgOrderBackground"
        app:layout_constraintTop_toTopOf="@id/btnOrderAction" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOrderAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_action_rounded"
        android:padding="4dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imgOrderBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtOrderPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>