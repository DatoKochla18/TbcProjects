<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flCardBackground"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/rounded_rectangle_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnHeart"
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/heart"

        app:layout_constraintBottom_toBottomOf="@id/flCardBackground"
        app:layout_constraintEnd_toStartOf="@id/imPhoto"
        app:layout_constraintStart_toStartOf="@id/flCardBackground">

    </androidx.appcompat.widget.AppCompatImageButton>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imPhoto"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="@id/flCardBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnHeart"
        app:layout_constraintTop_toTopOf="@id/flCardBackground"
        app:srcCompat="@drawable/img1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/cardTextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flCardBackground">

    </androidx.appcompat.widget.AppCompatTextView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle">

    </androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>